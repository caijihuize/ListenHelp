<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_device_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备选择"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/button_refresh_devices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刷新设备"
                        android:textSize="14sp" />
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="输入设备" />

                    <Spinner
                        android:id="@+id/spinner_microphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="输出设备" />

                    <Spinner
                        android:id="@+id/spinner_speaker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_audio_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_device_selection">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音频设置"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="输入音量" />

                <SeekBar
                    android:id="@+id/seekbar_input_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:max="100"
                    android:progress="80" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="输出音量" />

                <SeekBar
                    android:id="@+id/seekbar_output_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:max="100"
                    android:progress="80" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="放大系数" />

                <SeekBar
                    android:id="@+id/seekbar_amplification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:max="100"
                    android:progress="1" />

                <TextView
                    android:id="@+id/text_amplification_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="当前系数: 1.0" />

                <Switch
                    android:id="@+id/switch_noise_reduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="降噪" />

                <Button
                    android:id="@+id/button_audio_control"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="开始音频处理"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 波形显示卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_waveform"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_audio_settings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实时波形"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="输入波形" />

                        <com.example.listenhelp6.audio.WaveformView
                            android:id="@+id/input_waveform"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="输出波形" />

                        <com.example.listenhelp6.audio.WaveformView
                            android:id="@+id/output_waveform"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 均衡器卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_equalizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_waveform"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="均衡器"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />
                    
                    <Spinner
                        android:id="@+id/spinner_equalizer_preset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="120dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <!-- 60Hz -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="60Hz" />
                            
                        <SeekBar
                            android:id="@+id/seekbar_eq_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="30"
                            android:progress="15" />
                            
                        <TextView
                            android:id="@+id/text_eq_1"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0 dB"
                            android:gravity="end" />
                    </LinearLayout>
                    
                    <!-- 230Hz -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="230Hz" />
                            
                        <SeekBar
                            android:id="@+id/seekbar_eq_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="30"
                            android:progress="15" />
                            
                        <TextView
                            android:id="@+id/text_eq_2"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0 dB"
                            android:gravity="end" />
                    </LinearLayout>
                    
                    <!-- 910Hz -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="910Hz" />
                            
                        <SeekBar
                            android:id="@+id/seekbar_eq_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="30"
                            android:progress="15" />
                            
                        <TextView
                            android:id="@+id/text_eq_3"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0 dB"
                            android:gravity="end" />
                    </LinearLayout>
                    
                    <!-- 1.8kHz -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="1.8kHz" />
                            
                        <SeekBar
                            android:id="@+id/seekbar_eq_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="30"
                            android:progress="15" />
                            
                        <TextView
                            android:id="@+id/text_eq_4"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0 dB"
                            android:gravity="end" />
                    </LinearLayout>
                    
                    <!-- 3.6kHz -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="3.6kHz" />
                            
                        <SeekBar
                            android:id="@+id/seekbar_eq_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="30"
                            android:progress="15" />
                            
                        <TextView
                            android:id="@+id/text_eq_5"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0 dB"
                            android:gravity="end" />
                    </LinearLayout>
                    
                    <!-- 7.2kHz -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="7.2kHz" />
                            
                        <SeekBar
                            android:id="@+id/seekbar_eq_6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="30"
                            android:progress="15" />
                            
                        <TextView
                            android:id="@+id/text_eq_6"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0 dB"
                            android:gravity="end" />
                    </LinearLayout>
                    
                    <!-- 14kHz -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="14kHz" />
                            
                        <SeekBar
                            android:id="@+id/seekbar_eq_7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="30"
                            android:progress="15" />
                            
                        <TextView
                            android:id="@+id/text_eq_7"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0 dB"
                            android:gravity="end" />
                    </LinearLayout>
                    
                    <!-- 20kHz -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="20kHz" />
                            
                        <SeekBar
                            android:id="@+id/seekbar_eq_8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="30"
                            android:progress="15" />
                            
                        <TextView
                            android:id="@+id/text_eq_8"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0 dB"
                            android:gravity="end" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
